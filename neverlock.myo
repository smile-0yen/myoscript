function onForegroundWindowChange(app, title)
    -- myo.unlock("hold")
    myo.debug("onForegroundWindowChange: " .. app .. ", " .. title .. "and unlock")
    if app == "com.googlecode.iterm2" then
        flg = true
    else
        flg = false
    end
    return true
end

