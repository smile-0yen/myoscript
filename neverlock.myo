function onPoseEdge(pose, edge)
    myo.debug("onPoseEdge: " .. pose .. ", " .. edge)
    if pose == "rest" then
        myo.debug("Move!!")
    end
    if flg then
        if pose == "fist" then
            gitCommit()
        end
    end
    x,y,z = myo.getGyro()
    myo.debug("x: " .. x .. ", y: " .. y .. ", z: " .. z)
end

